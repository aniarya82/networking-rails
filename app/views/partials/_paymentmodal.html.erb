<div id="payment_details_modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Add the payment details</h4>
      </div>
      <div class="modal-body">

        <form id="payment_details_form" action="/" method="GET">

          Mode: 

          <select name="mode" class="form-control">
            <option value="DD">DD</option>
            <option value="CH">Cheque</option>
            <option value="NB">Net Banking</option>
          </select>
          <br>
          Reference number: <input type="text" name="refnum" minlength="4" required>
          <br>
          Date of payment (yyyy-mm-dd): <input type="date" name="date" required> <br>
          Amount paid: <input type="number" name="amount" min="100" required> <br>

          <input type="submit">

        </form>

      </div>
      <div class="modal-footer">
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
